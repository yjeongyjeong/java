		Scanner scan = new Scanner(System.in);
		System.out.println("정수 입력 >> ");
		int number = scan.nextInt();
		/* 4000을 입력받았을 때 시분초로 바꿔서 입력해주기
		코드 작성
		
		int second = 4000/(60*60)
		int hour = number 
		*/
		
		//출력은
		System.out.println("1시간 6분 40초");
		System.out.println(4000/3600);
	}

}
