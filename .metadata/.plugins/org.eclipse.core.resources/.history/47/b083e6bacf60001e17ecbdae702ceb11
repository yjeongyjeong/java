package com.movie;

import java.util.List;

public class AdminMenu extends AbstractMenu{

	private static final AdminMenu instance = new AdminMenu(null);
	private static final String ADMIN_MENU_TEXT =
			"1. 영화 등록하기\n"+
			"2. 영화 목록보기\n"+
			"3. 영화 삭제하기\n"+
			"b. 메인 메뉴로 이동\n"+
			"메뉴를 선택하세요 : ";
			
			
	private AdminMenu(Menu prevMenu) {
		super(ADMIN_MENU_TEXT, prevMenu);
	}
	
	public static AdminMenu getInstance() {
		return instance;
	}

	@Override
	public Menu next() {
		switch(sc.nextLine()) {
		case "2" : //2. 영화 목록보기
			printAllMovies();
		case "b" : return prevMenu; //mainMenu가 나옴
		default : return this; //admin_menu_text가 계속 나옴
		}
	}

	private void printAllMovies() {
		try {
			List<Movie> movies = Movie.findAll();
		} catch (Exception e) {
			System.out.println("데이터 접근에 실패하였습니다.");
		}
	}
	
}
