package ex02_4;

class Box<T> {
	private T ob; // 필드

	public T get() { // getter 메서드
		return ob;
	}
	public void set(T ob) { // setter 메서드
		this.ob = ob;
	}
	@Override
	public String toString() {
		return ob.toString();
	}
}

class Toy {
	public String toString() { return "I am a Toy!"; }
}

class BoxHandler{ 
	public static void outBox(Box<? extends Toy> box) { //꺼내기 : 출력만!!! get만 가능
		Toy t = box.get();
		System.out.println(t);
		box.set(new Toy()); //에러남!!!
	}
	public static void inBox(Box<? super Toy> box, Toy n) { //저장하기 : set만 가능!!!
//		toy거나 toy의 상위거나(object) box는 아무사이도 아니니까 에러가 남
		box.set(n);
		Toy n2 = box.get(); //에러남!!!
	}
}

public class WildCardUnBox {
	public static void main(String[] args) {
		Box<Toy> box = new Box(); //Toy타입의 객체 box를 생성
		BoxHandler.inBox(box, new Toy());
		
		BoxHandler.outBox(box);
	}
}
