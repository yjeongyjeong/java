package ex03;

//구구단출력
public class Exam03 {
	public static void main(String[] args) {
		for (int i = 1; i <= 9; i++) {
			for (int j = 1; j <= 3; j++) {
				int x = j + 1 + (i - 1) / 3 * 3; 
				int y = i % 3 == 0 ? 3 : i % 3;

/* i=1이고 j=1부터 시작하면
 * int x = ( 1+1+(1-1) / 3 )* 3 = 2
 * int y = 1을 3으로 나누면 0이되어 참이므로 3이됨
 */
 
				
				if (x > 9)
					break;
				System.out.print(x + "*" + y + "=" + x * y + "\t");
			}
			System.out.println();
			if (i % 3 == 0)
				System.out.println();
		}
	}
}
